FROM php:8.2-apache

# Extensiones necesarias
RUN apt-get update && apt-get install -y \
    unzip \
    libpng-dev \
    libonig-dev \
    libxml2-dev \
    zip \
    curl \
    git \
    supervisor

RUN docker-php-ext-install pdo pdo_mysql mbstring exif pcntl bcmath gd

# Habilitar mod_rewrite para Laravel
RUN a2enmod rewrite

# Config de Apache
COPY apache-laravel.conf /etc/apache2/conf-available/laravel.conf
RUN a2enconf laravel

WORKDIR /var/www/html

# Copiar el código Laravel
COPY . .

# Dar permisos a directorios Laravel
RUN chmod -R 775 storage bootstrap/cache

# Copiar script de workers y dar permisos de ejecución
COPY start-workers.sh start-workers.sh
RUN chmod +x start-workers.sh

# Copiar Composer desde contenedor oficial
COPY --from=composer:latest /usr/bin/composer /usr/bin/composer

# Instalar dependencias
RUN composer install --no-dev --optimize-autoloader

# Comando comentado para migraciones (solo si hiciera falta)
# RUN php artisan migrate --force


EXPOSE 80

# Comando por defecto
CMD ["apache2-foreground"]
